{
  "manifest_version": 3,
  "name": "Contract Security Scanner",
  "version": "1.0.0",
  "description": "Scan smart contracts directly from Etherscan and other blockchain explorers",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://etherscan.io/*",
    "https://basescan.org/*",
    "https://polygonscan.com/*",
    "https://solscan.io/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://etherscan.io/address/*",
        "https://basescan.org/address/*",
        "https://polygonscan.com/address/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}


